@model ProductModel
@{
    // string title = Model?.ProductID == null ? "Insert Product" : "Update Product";
    // ViewData["Title"] = title;
    // string buttonLabel = Model?.ProductID == null ? "Insert" : "Update";

}
<h2 class="mt-3 mb-3">@ViewData["Title"]</h2>
<form method="post" asp-action="ProductSave" class="row g-3">
    <input type="hidden" asp-for="ProductID" />
    <div class="mb-3">
        <label class="form-label">Product Name<span class="text-danger">*</span></label>
        <input type="text" asp-for="ProductName" class="form-control" placeholder="Product Name">
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Product Price<span class="text-danger">*</span></label>
        <input type="text" asp-for="ProductPrice" class="form-control" placeholder="Product Price">
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Product Code<span class="text-danger">*</span></label>
        <input type="text" asp-for="ProductCode" class="form-control" placeholder="Product Code">
        <span asp-validation-for="ProductCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Description<span class="text-danger">*</span></label>
        <input type="text" asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="userID" class="form-label">User<span class="text-danger">*</span></label>
        <select asp-for="UserID" class="form-control" id="userID" asp-items="@(new SelectList(@ViewBag.User,"UserID","UserName"))">
            <option disabled="disabled" selected>-- Select User --</option>
        </select>
        <span asp-validation-for="UserID" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Okkk</button>
        <button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("Product", "Product")'">Cancel</button>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
