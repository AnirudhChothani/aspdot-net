@using System.Data;

<div class="container">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Create List</h2>
        </div>
    </div>

    <div class="col-12 text-end">
        <a asp-controller="Product" asp-action="AddEdit" class="btn btn-primary">
            Create Proudct
        </a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Pric  
            </th>
            <th>
                Product Code
            </th>
            <th>
                Product Discription
            </th>
            <th>
                User Name
            </th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (DataRow product in Model.Rows)
            {
                <tr>
                    <td>  @product["ProductName"] </td>
                    <td> @product["ProductPrice"]  </td>
                    <td>@product["ProductCode"]</td>
                    <td>@product["Description"]</td>
                    <td>@product["UserName"]</td>
                    <td>
                        <form method="post" asp-controller="Product" asp-action="AddEdit" style="display:inline;">
                            <input type="hidden" name="productID" value="@product["productID"]" />
                            <button class="btn btn-success">Edit</button>
                        </form>
                        <!-- Delete button -->
                        <form method="post" asp-controller="Product" asp-action="DeleteProduct" style="display:inline;">
                            <input type="hidden" name="productID" value="@product["productID"]" />
                            <button class="btn btn-danger" type="submit" onclick="return confirmDelete()">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }

       
            
    </tbody>


</table>